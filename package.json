{
  "name": "unrestrictme",
  "version": "1.0.0",
  "description": "Desktop application for connecting to the unrestrict.me VPN network.",
  "main": "./main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "build -p always"
  },
  "repository": "https://github.com/dextronox/unrestrictme",
  "keywords": [
    "VPN",
    "unrestrict.me",
    "proxy"
  ],
  "author": "unrestrict.me",
  "license": "MIT",
  "build": {
    "appId": "com.unrestrictme.client",
    "productName": "unrestrict.me",
    "directories": {
      "buildResources": "build/",
      "output": "dist/",
      "app": "."
    },
    "win": {
      "target": "nsis",
      "icon": "build/win.ico",
      "publisherName": "unrestrict.me",
      "verifyUpdateCodeSignature": true,
      "asar": false,
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "deb",
      "icon": "build/256x256.png",
      "synopsis": "Connect to unrestrict.me",
      "category": "Network"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "openvpn"
      ],
      "maintainer": "unrestrict.me"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "publish": {
      "provider": "github",
      "private": false
    },
    "files": [
      "**/*",
      "!package.json",
      "!log.txt",
      "!package-lock.json",
      "!settings.conf",
      "!settingsTemplate.conf",
      "!README.md",
      "!.gitignore",
      "!/build",
      "!/dist",
      "!/keys/*",
      "!token"
    ]
  },
  "devDependencies": {
    "electron": "^4.0.2",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "alertifyjs": "^1.11.2",
    "child_process": "^1.0.2",
    "electron-log": "^2.2.17",
    "fs": "0.0.1-security",
    "getos": "^3.1.1",
    "is-elevated": "^2.0.1",
    "jquery": "^3.3.1",
    "network": "^0.4.1",
    "node-rsa": "^1.0.1",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "request": "^2.88.0",
    "request-progress": "^3.0.0",
    "shell": "^0.5.0",
    "sweetalert": "^2.1.2",
    "uri-js": "^4.2.2",
    "url": "^0.11.0"
  }
}
